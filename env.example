# Environment Configuration for PC Building System
# Copy this file to .env and update the values for your environment

# Application Environment
APP_ENV=production
APP_DEBUG=0
APP_TIMEZONE=Asia/Manila

# Database Configuration
DB_HOST=localhost
DB_NAME=builditpc_db
DB_USER=root
DB_PASS=
DB_PORT=3306
DB_CHARSET=utf8mb4

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=change_me_in_production_please
JWT_EXPIRY=3600
REFRESH_JWT_SECRET=change_me_too_in_production
REFRESH_JWT_EXPIRY=1209600

# OTP Configuration
OTP_REQUEST_COOLDOWN=60
OTP_MAX_PER_HOUR=5
OTP_TTL_MINUTES=5

# Email Configuration (for OTP and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@builditpc.com
SMTP_FROM_NAME=BuildItPC

# Security Configuration
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900
SESSION_TIMEOUT=3600
PASSWORD_MIN_LENGTH=8

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# CORS Configuration (for production, specify your domain)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=logs/app.log

# Cache Configuration
CACHE_ENABLED=1
CACHE_TTL=3600

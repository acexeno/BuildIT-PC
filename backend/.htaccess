# Minimal Security Configuration for PC Building System Backend
# This file provides basic security protection

# Disable directory browsing
Options -Indexes

# Protect sensitive files
<Files ".env*">
    Require all denied
</Files>

<Files "*.log">
    Require all denied
</Files>

<Files "*.sql">
    Require all denied
</Files>

<Files "*.md">
    Require all denied
</Files>

# Protect directories
<Directory "config">
    Require all denied
</Directory>

<Directory "logs">
    Require all denied
</Directory>

<Directory "vendor">
    Require all denied
</Directory>

<Directory "scripts">
    Require all denied
</Directory>

# Prevent access to backup files
<FilesMatch "\.(bak|backup|old|tmp|temp)$">
    Require all denied
</FilesMatch>

# Prevent access to version control files
<FilesMatch "\.(git|svn|hg)$">
    Require all denied
</FilesMatch>
# Security Headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options "DENY"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    
    # HSTS (only for HTTPS)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" env=HTTPS
</IfModule>

# Prevent access to sensitive files
<FilesMatch "\.(env|log|sql|bak|backup)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Prevent access to configuration files
<FilesMatch "^(config|database|security)\.php$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Minimal Security Configuration for PC Building System Backend
# This file provides basic security protection

# Disable directory browsing
Options -Indexes

# Protect sensitive files
<Files ".env*">
    Require all denied
</Files>

<Files "*.log">
    Require all denied
</Files>

<Files "*.sql">
    Require all denied
</Files>

<Files "*.md">
    Require all denied
</Files>

# Protect directories
<Directory "config">
    Require all denied
</Directory>

<Directory "logs">
    Require all denied
</Directory>

<Directory "vendor">
    Require all denied
</Directory>

<Directory "scripts">
    Require all denied
</Directory>

# Prevent access to backup files
<FilesMatch "\.(bak|backup|old|tmp|temp)$">
    Require all denied
</FilesMatch>

# Prevent access to version control files
<FilesMatch "\.(git|svn|hg)$">
    Require all denied
</FilesMatch>
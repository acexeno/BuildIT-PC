# Ensure the latest index.html is always used (prevents stale UI after deploy)
<Files "index.html">
  FileETag None
  <IfModule mod_headers.c>
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </IfModule>
</Files>

# Cache hashed asset files aggressively (Vite generates content-hashed filenames)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/json "access plus 7 days"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# Single Page App routing: let the frontend handle client-side routes
RewriteEngine On

# Allow direct file/directory access
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Do not rewrite backend API requests
RewriteCond %{REQUEST_URI} ^/backend/ [NC]
RewriteRule ^ - [L]

# Fallback to index.html for SPA routes
RewriteRule ^ index.html [L]



